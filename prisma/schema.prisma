datasource db {
    provider = "postgresql"
    url      = env("prisma_db_url")
}

generator client {
    provider = "prisma-client-js"
}

model Guild {
    guildSid String @id

    permissions           Permissions?
    moduleChannelClaiming ModuleChannelClaiming?
}

model Permissions {
    id       Int    @id @default(autoincrement())
    guild    Guild  @relation(fields: [guildSid], references: [guildSid], onDelete: Cascade)
    guildSid String @unique

    adminSid String? @unique
}

model ModuleChannelClaiming {
    id       Int    @id @default(autoincrement())
    guild    Guild  @relation(fields: [guildSid], references: [guildSid], onDelete: Cascade)
    guildSid String @unique

    claimChannels ClaimChannel[]
}

model ClaimChannel {
    id                Int                   @id @default(autoincrement())
    channelClaiming   ModuleChannelClaiming @relation(fields: [channelClaimingId], references: [id], onDelete: Cascade)
    channelClaimingId Int

    channelSid String @unique

    isClaimed Boolean   @default(false)
    location  String?
    claimedAt DateTime?
}
