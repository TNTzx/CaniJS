{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
            "type": "node",
            "request": "launch",
            "name": "Login",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.ts",
            "runtimeArgs": [
                "-r", "ts-node/register",
                "-r", "tsconfig-paths/register"
            ],
            "args": ["--login", "--dev"],
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ]
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Deploy Commands Guild",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.ts",
            "runtimeArgs": [
                "-r", "ts-node/register",
                "-r", "tsconfig-paths/register"
            ],
            "args": ["--deploy-cmds-guild", "--dev"],
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ]
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Deploy Commands Global",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.ts",
            "runtimeArgs": [
                "-r", "ts-node/register",
                "-r", "tsconfig-paths/register"
            ],
            "args": ["--deploy-cmds-global", "--dev"],
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ]
        },
	]
}